
.form{
	height:50%;
}
.form1{
	height:50%;
}
.custom-file-upload {
  width: 20%;
  padding: 6px 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: lightgray;
  font-size: large;
}

/* 图片预览样式 */
._img {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border: solid;
  border-width: 2rpx;
  border-radius: 5%;
}

/* 清除图片按钮样式 */
.clear-images {
  width: 30%;
  padding: 6px 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: lightgray;
}

/* 按钮容器样式 - 使用 Flex 布局 */
.button-container {
  display: flex;
  gap: 1px; /* 设置按钮之间的间距 */
}

/* 可选的样式表 */
.image-container {
  position: relative;
  display: inline-block;
}
.delete-btn {
position: absolute;
  top: 12rpx;
  right: 12rpx;
  cursor: pointer;
  background-color: lightgray;
  color: white;
  padding: 12rpx;
  max-height: 32rpx;
  max-width: 32rpx;
  border-radius: 10%;
}
.type_container{
	display: flex;
	justify-content: space-evenly;
	width: 100%;
	margin-top: 3%;
}
.type1_container{
	display: flex;
	justify-content: space-evenly;
	width: 60%;
	margin-left: 5%;
}

/* 训练类型view */
.view1 {
  display: inline-block;
  width: 140rpx;
  height: 60rpx;
  border: 1px solid #ccc;
  text-align: center;
  line-height: 70rpx;
  cursor: pointer;
}

/* .view1-selected 和 .view1-unselected */
.view1-selected {
  background-color: cornflowerblue;
  color: #fff;
  border: solid;
  border-radius: 5%;
  border-width: 2rpx;
  border-color: gray;
  width: 120rpx;
  height: 60rpx;
  text-align: center;
}
.view1-unselected {
  background-color: white;
  color: #000;
  border: solid;
  border-radius: 5%;
  border-width: 2rpx;
  border-color: gray;
  width: 120rpx;
  height: 60rpx;
  text-align: center;
}

/* 外层容器，设置 flex 布局 */
.outside_container {
  display: flex;
  flex-direction: column; /* Stack the small views vertically */
}

/* 里层小view */
.inside_view{
	display: flex;
	margin-top: 5%;
	margin-left: 5%;
}

