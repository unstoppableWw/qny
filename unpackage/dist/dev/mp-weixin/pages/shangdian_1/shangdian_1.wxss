}
.card-loop {
  margin-top: 3%;
  width: 100%;
  height: 300rpx;
  position: relative;
}
.card-loop .loop-item {
  width: calc(100% / 5);
  float: left;
  box-sizing: border-box;
  position: absolute;
  transition: all ease-out 0.5s;
  -webkit-transform-origin: 50% 50%;
          transform-origin: 50% 50%;
}
.card-loop .loop-item ._img {
  width: 100%;
  height: 100%;
}
.card-loop .loop-item ._div {
  background: #fff;
  padding-bottom: 5px;
}
.card-loop .loop-item ._p.title {
  padding: 3px;
  color: #333;
  font-weight: bolder;
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
}
.card-loop .loop-item ._p.content {
  font-size: 6px;
  color: #999;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  -webkit-transform: scale(0.9);
          transform: scale(0.9);
}
.card-loop .loop-item ._p.tool {
  text-align: center;
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
}
.image_text {
  height: 60rpx;
  width: 300rpx;
  position: fixed;
  z-index: 20;
  top: 25%;
  left: 20%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  /* 垂直居中 */
}

