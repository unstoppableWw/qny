.page {
  height: 100vh;
  /* 设置高度为视口高度 */
  width: 100%;
  /* 设置宽度为100% */
  background-size: cover;
  display: flex;
  /* 使用flex布局 */
  flex-direction: column;
  /* 垂直排列子元素 */
}
.title-view {
  height: 5%;
  /* 设置高度为600rpx */
  width: 100%;
  /* 设置宽度为100% */
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.left {
  width: 20%;
  height: 70rpx;
}
.center {
  font-size: 30rpx;
  width: 60%;
  text-align: center;
  color: white;
}
.right {
