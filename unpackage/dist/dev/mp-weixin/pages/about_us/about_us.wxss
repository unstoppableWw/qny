
.total_view {
	width: 100%;
	height: auto;
	display: flex;
	flex-direction: column;
}
.header {
	width: 100%;
	height: 100rpx;
	display: flex;
	flex-direction: row;
	border-bottom: solid 1rpx #ccc;
}
.text_content {
	width: 90%;
	height: auto;
	overflow-y: auto;
	white-space: normal;
	word-wrap: break-word;
	overflow-wrap: break-word;
	text-align: justify;
	padding-left: 30rpx;
	padding-right: 30rpx;
	padding-top: 30rpx;
	font-size: 34rpx;
	text-indent: 2em; /* 设置首行缩进，可以根据需要调整缩进值 */
}



