
.totoal_container {
	
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
}
.header {
	width: 100%;
	height: 100rpx;
	display: flex;
	flex-direction: row;
}
.question_showView {
	
	width: 100%;
	height: auto;
	margin-top: 1%;
}
.question_content {
	width: 90%;
	margin-left: 5%;
	height: auto;
	font-size: medium;
	word-wrap: break-word;
	text-align: justify;
	/* 文本两端对齐 */
	white-space: normal;
	/* 自动换行 */
}
.data_analyze_view {
	width: 100%;
	height: auto;
	margin-top: 1%;
}
.cost_time_showView {
	width: 100%;
	height: auto;
	display: flex;
	flex-direction: column;
}
.showTimes {
	width: 100%;
	padding-left: 5%;
	padding-top: 2%;
	display: flex;
	flex-direction: column;
}
.timesDetail {
	width: 90%;
	height: 80rpx;
	display: flex;
	align-items: center;
	flex-direction: row;
}
.dotNum {
	width: 50rpx;
	height: 50rpx;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: 500;
}
.progress {
	height: 20rpx;
	
	border-radius: 10rpx;
	background-color: #4095E5;
	transition: width 0.5s ease;
	/* 定义动画效果 */
}
.timeNumStyle {
	height: 80%;
	display: flex;
	flex-grow: 1;
	align-items: center;
	justify-content: left;
	padding-left: 50rpx;
	font-size: 30rpx;
	opacity: 0.8;
}
.AI_analyze_showView {
	width: 100%;
	height: auto;
	margin-top: 1%;
}
.AI_silu_showView {
	width: 100%;
	height: auto;
	margin-top: 1%;
}
.AI_analyze_showView {
	width: 100%;
	height: auto;
	margin-top: 1%;
}
.text-area {
  width: 96%;
  margin-bottom: 100rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  
  padding: 20rpx;
}
.chushi_denglu{
	display: flex;
	background-color: #4095E5;
	border-radius: 40rpx;
	width: 150rpx;
	height: 70rpx;
	font-size: 30rpx;
	color: white;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}
.result_title{
	font-size: medium;
	font-weight: 500;
	margin-left: 5%;
	height: 100rpx;
	display: flex;
	align-items: center;
}

