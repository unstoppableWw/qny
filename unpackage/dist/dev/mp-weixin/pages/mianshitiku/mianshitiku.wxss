
.total_contanier {
	width: 100%;
	height: auto;
}
.header {
	width: 100%;
	height: 100rpx;
	display: flex;
	flex-direction: row;
}
.main_content {
	width: 100%;
	height: auto;
	display: flex;
	flex-direction: column;
}
.info_list {
	margin-top: 1%;
	width: 100%;
	height: auto;
	display: flex;
	flex-direction: column;
	overflow-y: auto;
}
.tiezi {
	width: 100%;
	height: 160rpx;
	display: flex;
	flex-direction: row;
	border-top: solid 1rpx #F5F5F5;
	border-left: 0;
	border-right: 0;
}
.shaixuan_view{
	display: flex;
	flex-direction: row;
	justify-content: space-evenly;
}
.tiezi_left {
	width: 80%;
	height: 150rpx;
	display: flex;
	flex-direction: column
}
.tiezi_right {
	width: 20%;
	height: 130rpx;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	padding-right: 30rpx;
}
.detail_part {
	color: gray;
	font-size: 25rpx;
	font-weight: 300;
	padding-left: 30rpx;
	width: 100%;
	height: 100rpx;
	
	white-space: nowrap;
	/* 防止文本换行 */
	overflow: hidden;
	/* 隐藏超出部分的文本 */
	text-overflow: ellipsis;
	/* 显示省略号 */
	max-width: 100%;
	/* 控制最大宽度 */
}
.tiezi_title {
	padding-left: 27rpx;
	width: 100%;
	height: 100rpx;
	display: flex;
	align-items: flex-end;
	font-size: 32rpx;
	font-weight: 500;
}
.tiezi_btn {
	width: 100rpx;
	height: 60rpx;
	
	border-radius: 50rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #DAE5FC;
	color:#4095E5;
}

